		{
			"name": "Booking – Get Booking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json()\r",
							"\r",
							"pm.test(\"Validate Name\", function () {\r",
							"    var expectedName = pm.environment.get(\"firstname\") + ' ' + pm.environment.get(\"lastname\");\r",
							"    var actualName = jsonData.firstname + ' ' + jsonData.lastname;\r",
							"    \r",
							"    pm.expect(actualName).to.equal(expectedName);\r",
							"});\r",
							"\r",
							"pm.test(\"Check Total Price\", function () {\r",
							"    pm.expect(jsonData.totalprice).to.equal(pm.environment.get(\"totalprice\"));\r",
							"});\r",
							"\r",
							"pm.test(\"Check Booking Dates\", function () {\r",
							"    var expectedDates = pm.environment.get(\"checkin\") + '-' + pm.environment.get(\"checkout\");\r",
							"    var actualDates = jsonData.bookingdates.checkin + '-' + jsonData.bookingdates.checkout;\r",
							"    \r",
							"    pm.expect(actualDates).to.equal(expectedDates);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
